{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "importHelpers": true,
    "lib": [
      "dom",
      "es5",
      "es6"
    ],
    "esModuleInterop": true,
    "outDir": "./build/compiled",
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": ".",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "pretty": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "@typexs/base": [
        "./packages/base/build/package/*",
        "./packages/base/build/package"
      ],
      "@typexs/base/*": [
        "./packages/base/build/package/*",
        "./packages/base/build/package"
      ],
      "@typexs/base-ng": [
        "./packages/base-ng/build/package/*",
        "./packages/base-ng/build/package"
      ],
      "@typexs/base-ng/*": [
        "./packages/base-ng/build/package/*",
        "./packages/base-ng/build/package"
      ],
      "@typexs/entity-ng": [
        "./packages/entity-ng/build/package/*",
        "./packages/entity-ng/build/package"
      ],
      "@typexs/entity-ng/*": [
        "./packages/entity-ng/build/package/*",
        "./packages/entity-ng/build/package"
      ],
      "@typexs/auth-ng": [
        "./packages/auth-ng/build/package/*",
        "./packages/auth-ng/build/package"
      ],
      "@typexs/auth-ng/*": [
        "./packages/auth-ng/build/package/*",
        "./packages/auth-ng/build/package"
      ],
      "@typexs/forms-ng/*": [
        "./packages/forms-ng/build/package/*",
        "./packages/forms-ng/build/package"
      ],
      "@typexs/forms-ng": [
        "./packages/forms-ng/build/package/*",
        "./packages/forms-ng/build/package"
      ],
      "@typexs/storage-ng/*": [
        "./packages/storage-ng/build/package/*",
        "./packages/storage-ng/build/package"
      ],
      "@typexs/storage-ng": [
        "./packages/storage-ng/build/package/*",
        "./packages/storage-ng/build/package"
      ],
      "@typexs/ng-router-menu/*": [
        "./packages/ng-router-menu/build/package/*",
        "./packages/ng-router-menu/build/package"
      ],
      "@typexs/ng-router-menu": [
        "./packages/ng-router-menu/build/package/*",
        "./packages/ng-router-menu/build/package"
      ],
      "@typexs/ng-theme-base": [
        "./packages/ng-theme-base/build/package/*",
        "./packages/ng-theme-base/build/package"
      ],
      "@typexs/ng-theme-base/*": [
        "./packages/ng-theme-base/build/package/*",
        "./packages/ng-theme-base/build/package"
      ],
      "@typexs/tasks-ng": [
        "./packages/tasks-ng/build/package/*",
        "./packages/tasks-ng/build/package"
      ],
      "@typexs/tasks-ng/*": [
        "./packages/tasks-ng/build/package/*",
        "./packages/tasks-ng/build/package"
      ]
    }
  },
  "exclude": [
    "archive",
    "build",
    "dist",
    "tmp",
    "src/**/files",
    "node_modules"
  ],
  "compileOnSave": true
}

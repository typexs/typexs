{
  "compilerOptions": {
    "importHelpers": true,
    "lib": [
      "dom",
      "es6",
      "es2016",
      "es2017"
    ],
    "esModuleInterop": true,
    "outDir": "./build/compiled",
    "target": "es2018",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": ".",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "pretty": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": "./"
  },
  "exclude": [
    "archive",
    "build",
    "dist",
    "tmp",
    "files",
    "node_modules"
  ],
  "include": [
    "packages/**/*"
  ],
  "compileOnSave": true
}
